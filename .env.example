# Mini-README: Canonical environment template for FM TimeTracker.
# Copy to .env, then run scripts/setup.sh (or scripts/setup.ps1 on Windows)
# to auto-fill secure defaults and run database migrations.

SECRET_KEY=replace-with-very-strong-secret
DATABASE_URL=sqlite:///./fm_timetracker.db
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
SECURE_COOKIES=false

# Bootstrap admin user for first login only. Rotate/remove password after setup.
BOOTSTRAP_ADMIN_EMAIL=admin@change.me
BOOTSTRAP_ADMIN_PASSWORD=replace-with-long-random-password
SECURE_BOOTSTRAP_ONBOARDING=true

# Optional billing integration keys.
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
